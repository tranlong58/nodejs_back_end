<%- include('header.ejs', { pageTitle: 'Show user page' }) %>
    <div class="table-container">
        <div id="title-table-user">
            List Users
        </div>
        <table id="table-user">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>City</th>
                <th>Action</th>
            </tr>
            <% for(var i=0; i < listUsers.length; i++) { %>
                <tr>
                    <td>
                        <%= listUsers[i].id %>
                    </td>
                    <td>
                        <%= listUsers[i].email %>
                    </td>
                    <td>
                        <%= listUsers[i].name %>
                    </td>
                    <td>
                        <%= listUsers[i].city %>
                    </td>
                    <td>
                        <form action="/edit-user/<%= listUsers[i].id %>" method="get" class="link">
                            <button class="edit-btn">Edit</button>
                        </form>

                        <form action="/delete-user" method="post" class="link">
                            <input name="id" value="<%= listUsers[i].id %>" class="d-none"></input>
                            <button class="delete-btn">Delete</button>
                        </form>
                    </td>
                </tr>
                <% } %>
        </table>

    </div>
    <%- include('footer.ejs') %>